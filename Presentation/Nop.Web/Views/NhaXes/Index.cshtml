@model LoginModel
@using Nop.Web.Models.Customer;
@using Nop.Core;
@using Nop.Core.Infrastructure;
@{
    Layout = null;
}
<title>Quản lý nhà xe - Đăng nhập -  CHONVE.VN</title>
<meta name="viewport" content="width=device-width, initial-scale=1">


<link href="/Themes/ChonVe/Content/bootstrap-3.2.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="/Themes/ChonVe/Content/css/responsive.css" rel="stylesheet" type="text/css" />

<script src="/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>

<style>
    body {
        background: url(/Content/chonve/nhaxe/login/back.png);
        background-color: #444;
        background: url(/Content/chonve/nhaxe/login/pinlayer2.png),url(/Content/chonve/nhaxe/login/pinlayer1.png),url(/Content/chonve/nhaxe/login/back.png);
    }

    .vertical-offset-100 {
        padding-top: 100px;
    }
</style>
<div class="container">
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Quản lý nhà xe - Đăng nhập</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        <fieldset>
                            <div class="message-error">
                                @Html.ValidationSummary(true, T("Account.Login.Unsuccessful").Text)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                            </div>
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </label>
                            </div>
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="@T("Account.Login.LoginButton")">
                        </fieldset>
                        @Html.HiddenFor(m=>m.MacCode)
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div id="boxdienthoaihotro"><strong>Điện thoại hỗ trợ: <br /><span style="font-size:large">04-6293-8860</span></strong></div>
<style>
    #boxdienthoaihotro {
        position: fixed;
        bottom: 0px;
        right: 5px;
        width: 200px;
        border-width: 0;
        border-style: solid;
        border-color: #808080;
        background: -webkit-gradient(linear,center top,center bottom,from(rgba(255,182,0,1)),to(rgba(204,145,0,1)));
        color: #000000;
        padding: 10px;
        text-align: center;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
        border-bottom-left-radius: 0px;
        border-bottom-right-radius: 0px;
    }
</style>
