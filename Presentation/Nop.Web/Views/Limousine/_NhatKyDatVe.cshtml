@model Nop.Web.Models.NhaXes.DatVeModel
@{
    Layout = null;   
}
<h1>Nhật ký đặt vé</h1>
<div id="nhatky-grid"></div>
<script>
    $(document).ready(function () {
        $("#nhatky-grid").kendoGrid({
            dataSource: {
                type: "json",
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("GetNhatKyDatVe", "Limousine"))?Id=@Model.Id",
                    type: "POST",
                    dataType: "json"
                }
            },
            schema: {
                data: "Data",
                total: "Total",
                errors: "Errors"
            },
            error: function(e) {
                display_kendoui_grid_error(e);
                // Cancel the changes
                this.cancelChanges();
            },
            serverPaging: false,
            serverFiltering: false,
            serverSorting: false
        },
        scrollable: false,
        columns: [                
                  {
                      field: "NgayTao",
                      title: "Ngày Tạo",
                      type: "date",
                      attributes: { style: "text-align:center" },
                      format: "{0:dd/MM/yyyy HH:mm}",
                  }, {
                      field: "NguoiTao",
                      title: "Người tạo"
                  }, {
                      field: "Note",
                      title: "Nội dung"
                  }, ]
    });
    });    
</script>