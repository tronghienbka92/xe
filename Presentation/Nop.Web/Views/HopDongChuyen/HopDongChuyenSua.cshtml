@model HopDongChuyenModel
@using Nop.Web.Models.NhaXes
@{
    Layout = "~/Views/Shared/_NhaXeLayout.cshtml";
    //page title
    ViewBag.Title = "Sửa hợp đồng trọn gói";
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "PhieuGuiHang-form" }))
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Content/chonve/nxmenu/hanhtrinhlichtrinh.png")" alt="" />
            Sửa hợp đồng @Html.ActionLink("(Quay về danh sách hợp đồng)", "ListHopDongChuyen")
        </div>
        <div class="options">
         
            <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="k-button" value="@T("Admin.Common.SaveContinue")" />
            <span id="PhieuGui-delete" class="k-button">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    @Html.Partial("_HopDongChuyenChinhSua", Model)
}
@Html.DeleteConfirmation("HopDongChuyenXoa", "PhieuGui-delete")
