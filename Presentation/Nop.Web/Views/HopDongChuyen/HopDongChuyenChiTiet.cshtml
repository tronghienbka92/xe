@model HopDongChuyenModel
@using Nop.Web.Models.NhaXes
@using Nop.Core.Infrastructure;
@using Nop.Services.NhaXes
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)
@{
    Layout = null;
    var defaultGridPageSize = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
    var gridPageSizes = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;
}
<style>
    .LegendTitle {
        height: 20px;
        font-size: initial;
        padding: 5px;
        color: #673AB7;
        font-weight: bold;
        border: 1px solid #03A9F4;
        border-radius: 5px;
    }

    .fieldset {
        border: 1px solid rgba(139, 195, 74, 0.44);
        margin-left: 20px;
        margin-top: 20px;
    }
</style>
<fieldset class="fieldset">
    <legend class="LegendTitle">
        <label>
            <img src="@Url.Content("~/Administration/Content/images/ico-orderstatus.png")" alt="" />
            Thông tin hợp đồng - @Model.SoHopDong
        </label>
    </legend>
    <table style="width:100%">
        <tr>
            <td style="vertical-align:top">

                <table class="adminContent">
                    <tr>
                        <td class="adminTitle">
                            Số hợp đồng:
                        </td>
                        <td class="adminData">
                            @Model.SoHopDong
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            Tên hợp đồng:
                        </td>
                        <td class="adminData">
                            @Model.TenHopDong

                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            Biển số xe:
                        </td>
                        <td class="adminData">
                            @Model.BienSoXe

                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            Lái xe:
                        </td>
                        <td class="adminData">
                            @Model.TenLaiXe
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            KM Xuất:
                        </td>
                        <td class="adminData">
                            @Model.KmXuat
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            Giá trị hợp đồng:
                        </td>
                        <td class="adminData">
                            @Model.GiaTri
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            Thời gian đón khách:
                        </td>
                        <td class="adminData">
                            @Model.ThoiGianDonKhach.ToString("dd/MM/yyyy HH:mm")

                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            Thời gian trả khách:
                        </td>
                        <td class="adminData">
                            @Model.ThoiGianTraKhach.ToString("dd/MM/yyyy HH:mm")
                        </td>
                    </tr>

                </table>
            </td>
            <td style="vertical-align:top">

                <table class="adminContent">
                    <tr>
                        <td class="adminTitle">
                            Điểm đón khách:
                        </td>
                        <td class="adminData">
                            @Model.DiemDonKhach
                        </td>
                    </tr>

                    <tr>
                        <td class="adminTitle">
                            Điểm trả khách:
                        </td>
                        <td class="adminData">
                            @Model.DiemTraKhach
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            Lộ trình:
                        </td>
                        <td class="adminData">
                            @Model.LoTrinh
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            Chiều về:
                        </td>
                        <td class="adminData">
                            @Model.ChieuVe

                        </td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                </table>
            </td>
        </tr>

        @if (Model.Id > 0)
        {
            <tr>

                <td colspan="2">


                    <div id="KhachHang_grid"></div>
                    <script>
                        $(document).ready(function () {

                            $("#KhachHang_grid").kendoGrid({
                                dataSource: {
                                    type: "json",
                                    transport: {
                                        read: {
                                            url: "@Html.Raw(Url.Action("GetKhachHangInHopDongChuyen", "HopDongChuyen"))",
                                            type: "POST",
                                            dataType: "json",
                                            data: additionalData
                                        },
                                        update: {
                                            url:"@Html.Raw(Url.Action("KhachHangChuyenUpdate", "HopDongChuyen"))",
                                            type: "POST",
                                            dataType: "json"
                                        },
                                        destroy: {
                                            url: "@Html.Raw(Url.Action("KhachHangChuyenDelete", "HopDongChuyen"))",
                                            type: "POST",
                                            dataType: "json"
                                        }
                                    },
                                    schema: {
                                        data: "Data",
                                        total: "Total",
                                        errors: "Errors",
                                        model: {
                                            id: "Id",
                                            fields: {
                                                TenKhachHang: { editable: true, type: "string" },
                                                SoDienThoai: { editable: true, type: "string" },
                                                NamSinh: { editable: true, type: "number" },
                                                isDaiDien: { editable: true, type: "boolean" },
                                                GhiChu: { editable: true, type: "string" },

                                            }
                                        }
                                    },
                                    requestEnd: function (e) {
                                        if ( e.type == "update") {
                                            this.read();
                                        }
                                    },
                                    error: function(e) {
                                        display_kendoui_grid_error(e);
                                        // Cancel the changes
                                        this.cancelChanges();
                                    },
                                    pageSize: @(defaultGridPageSize),
                                    serverPaging: true,
                                    serverFiltering: true,
                                    serverSorting: true
                                },
                                pageable: {
                                    refresh: true,
                                    pageSizes: [@(gridPageSizes)],
                                    messages: {
                                        display: "@T("Nop.Common.KendoGrid.display")", //{0} is the index of the first record on the page, {1} - index of the last record on the page, {2} is the total amount of records
                                        empty: "@T("Nop.Common.KendoGrid.Empty")",
                                        page: "@T("Nop.Common.KendoGrid.Page")",
                                        of: "@T("Nop.Common.KendoGrid.Of")", //{0} is total amount of pages
                                        itemsPerPage: "@T("Nop.Common.KendoGrid.itemsPerPage")",
                                        first: "@T("Nop.Common.KendoGrid.first")",
                                        previous: "@T("Nop.Common.KendoGrid.previous")",
                                        next: "@T("Nop.Common.KendoGrid.next")",
                                        last: "@T("Nop.Common.KendoGrid.last")",
                                        refresh: "@T("Nop.Common.KendoGrid.refresh")"
                                    }
                                },
                                scrollable: false,
                                columns: [{
                                    field: "TenKhachHang",
                                    title: "Tên khách hàng",
                                    width: 200
                                }, {
                                    field: "SoDienThoai",
                                    title: "Số điện thoại",

                                    width: 250
                                }, {
                                    field: "NamSinh",
                                    title: "Năm sinh",
                                    width: 100
                                }, {
                                    field: "isDaiDien",
                                    title: "Là người đại diện",
                                    width: 150,
                                    template: '#=isDaiDien?"Đại diện":""#'

                                },
                                {
                                    field: "GhiChu",
                                    title: "Ghi chú",

                                }]
                            });
                        });

                        //local datasource

                        function additionalData() {
                            return {
                                hopdongchuyenid: $('#@Html.FieldIdFor(model => model.Id)').val(),

                            };
                        }

                    </script>


                </td>
            </tr>
        }
    </table>







</fieldset>

<script>
    $(document).ready(function () {
        SetWindowPhieuCTCenter();
    });
</script>


